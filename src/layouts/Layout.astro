---
import FileDocument from "../components/icons/FileDocument.astro";
import GitHub from "../components/icons/GitHub.astro";
import LinkedIn from "../components/icons/LinkedIn.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="https://raw.githubusercontent.com/GrajalesU/portfolio/main/public/favicon.png"
    />
    <meta name="generator" content={Astro.generator} />
    <title>Portfolio | Juan Manuel Grajales</title>
  </head>
  <body class="font-display antialiased">
    <header
      class="sticky top-0 z-50 w-full border-b border-slate-300 bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60"
    >
      <navigation class="container mx-auto max-w-6xl flex justify-between">
        <h1 class="block px-4 py-2 md:px-8 md:py-4 text-slate-600">
          <strong class="pr-2 font-bold text-slate-900">Portfolio</strong>
          <span class="md:text-lg">Juan Manuel Grajales</span>
        </h1>
        <ul class="hidden md:flex items-center gap-4 px-4 py-2 md:px-8 md:py-4">
          <li>
            <a
              href="#about"
              class="group px-2 py-1 rounded-md hover:bg-slate-50 transition-colors"
            >
              <span
                class="group-hover:text-slate-900 transition-colors md:text-lg"
                >About</span
              >
            </a>
          </li>
          <li>
            <a
              href="#projects"
              class="group px-2 py-1 rounded-md hover:bg-slate-50 transition-colors"
            >
              <span
                class="group-hover:text-slate-900 transition-colors md:text-lg"
                >Projects</span
              >
            </a>
          </li>
          <li>
            <a
              href="#skills"
              class="group px-2 py-1 rounded-md hover:bg-slate-50 transition-colors"
            >
              <span
                class="group-hover:text-slate-900 transition-colors md:text-lg"
                >Skills</span
              >
            </a>
          </li>
          <li>
            <a
              href="#contact"
              class="rounded-md bg-slate-900 text-white px-4 py-2 md:px-6 md:py-3 hover:bg-slate-800 transition-colors md:text-lg"
              >Contact</a
            >
          </li>
        </ul>
      </navigation>
    </header>
    <main class="pb-16 md:pb-0">
      <slot />
    </main>
    <div
      class="fixed md:right-0 md:top-1/2 md:-translate-y-1/2 md:border-l md:border-t md:border-b md:rounded-l-lg md:bg-white/95 md:backdrop-blur supports-[backdrop-filter]:md:bg-white/60 bottom-0 flex md:flex-col px-4 py-2 justify-between z-50 w-full md:w-auto border-t border-slate-300 bg-white gap-2 md:gap-4 md:justify-normal md:h-fit"
    >
      <a
        href="/cv.pdf"
        target="_blank"
        rel="noopener noreferrer"
        class="group flex gap-2 text-xs items-center font-bold hover:bg-slate-50 rounded-md px-2 py-1 transition-colors"
      >
        <span class="group-hover:scale-110 transition-transform">
          <FileDocument />
        </span>
        CV
      </a>
      <a
        href="https://www.linkedin.com/in/juan-manuel-grajales-urquijo/"
        target="_blank"
        rel="noopener noreferrer"
        class="group flex gap-2 text-xs items-center font-bold hover:bg-slate-50 rounded-md px-2 py-1 transition-colors"
      >
        <span class="group-hover:scale-110 transition-transform">
          <LinkedIn />
        </span>
        LinkedIn
      </a>
      <a
        href="https://github.com/grajalesu"
        target="_blank"
        rel="noopener noreferrer"
        class="group flex gap-2 text-xs items-center font-bold hover:bg-slate-50 rounded-md px-2 py-1 transition-colors"
      >
        <span class="group-hover:scale-110 transition-transform">
          <GitHub />
        </span>
        GitHub
      </a>
    </div>
  </body>
</html>
