---
import ArrowRight from "./icons/ArrowRight.astro";
import { useTranslations, getLangFromUrl } from "../i18n/utils";
const lang = getLangFromUrl(new URL(Astro.url));
const t = useTranslations(lang);
---

<section class="w-full p-4 md:py-8 md:pb-16 min-h-svh content-center relative">
  <div class="container mx-auto max-w-5xl z-20 relative">
    <div
      class="flex flex-col md:flex-row md:items-center md:justify-between md:gap-8"
    >
      <div class="md:max-w-xl">
        <h2
          class="text-3xl font-bold mb-4 md:mb-8 tracking-tighter sm:text-5xl xl:text-6xl/none"
        >
          {t("hero.title")}
        </h2>
        <p class="mb-8 text-stone-600 px-2 md:px-0 md:max-w-[400px] md:text-xl">
          {t("hero.description")}
        </p>
        <div
          class="flex flex-col gap-4 mb-4 mx-auto justify-center items-center"
        >
          <a
            href="#projects"
            class="inline-flex w-full items-center gap-2 max-w-[326px] justify-center bg-stone-500 text-white rounded-md px-4 py-2 hover:bg-stone-50 hover:text-stone-500 font-bold transition-colors duration-200 md:max-w-[420px] md:px-6 md:py-3"
          >
            <span>{t("hero.projects-btn")}</span>
            <ArrowRight />
          </a>
          <a
            href="#contact"
            class="inline-flex w-full items-center gap-2 max-w-[326px] justify-center border border-stone-300 rounded-md px-4 py-2 hover:border-white bg-white hover:bg-stone-50 font-bold text-stone-500 transition-colors duration-200 md:max-w-[420px] md:px-6 md:py-3"
          >
            {t("hero.contact-btn")}
          </a>
        </div>
      </div>
      <div class="mt-8 md:mt-0 shrink-0 relative">
        <div
          class="w-[280px] h-[280px] md:w-[420px] md:h-[420px] mx-auto overflow-hidden rounded-2xl my-outline"
        >
          <img
            src="/profile-image.webp"
            alt={t("hero.img-alt")}
            width="420"
            height="420"
            class="w-full h-full object-cover"
          />
        </div>
      </div>
    </div>
  </div>
  <div
    class="absolute inset-0 z-0"
    style={{
      backgroundImage: `
        linear-gradient(to right, #e5e7eb 1px, transparent 1px),
        linear-gradient(to bottom, #e5e7eb 1px, transparent 1px)
      `,
      backgroundSize: "60px 60px",
      WebkitMaskImage:
        "radial-gradient(ellipse 70% 60% at 50% 100%, #000 60%, transparent 100%)",
      maskImage:
        "radial-gradient(ellipse 70% 60% at 50% 100%, #000 60%, transparent 100%)",
    }}
  >
  </div>
</section>

<style>
  .my-outline {
    &::before {
      content: "";
      position: absolute;
      top: calc(50% + 12px);
      left: calc(50% + 12px);
      transform: translate(-50%, -50%);
      width: 280px;
      height: 280px;
      border-radius: 16px;
      border: 2px solid var(--color-stone-600);
      z-index: -1;

      @media (min-width: 48rem) {
        width: 420px;
        height: 420px;
        top: calc(50% + 24px);
        left: calc(50% + 24px);
      }
    }
  }
</style>
